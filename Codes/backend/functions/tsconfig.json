{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "moduleResolution": "node16",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
