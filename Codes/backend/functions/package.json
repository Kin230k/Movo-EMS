{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch --preserveWatchOutput",
    "serve": "npm run build && cross-env FUNCTIONS_EMULATOR=true firebase emulators:start --only functions,auth",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "deploy": "npx firebase deploy --only functions",
    "logs": "npx firebase functions:log",
    "dev": "concurrently \"npm run watch\" \"cross-env FUNCTIONS_EMULATOR=true firebase emulators:start --only functions,auth\"",
    "generate:metadata": "ts-node  scripts/generateMetadata.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "dotenv": "^17.2.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.1.0",
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "private": true
}
